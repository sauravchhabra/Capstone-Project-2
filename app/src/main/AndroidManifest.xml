<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sauravchhabra.foodme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.sauravchhabra.foodme.FoodMe"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.sauravchhabra.foodme.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sauravchhabra.foodme.ui.nearbyrestaurants.NearbyRestaurantsActivity"
            android:parentActivityName="com.sauravchhabra.foodme.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBar" />
        <activity
            android:name="com.sauravchhabra.foodme.ui.establisments.EstablismentsActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBar" />
        <activity android:name="com.sauravchhabra.foodme.ui.detail.RestaurantDetailActivity" />
        <activity
            android:name="com.sauravchhabra.foodme.ui.favorites.FavoritesActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBar" />

        <activity
            android:name="com.sauravchhabra.foodme.ui.search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBar"
            android:parentActivityName="com.sauravchhabra.foodme.ui.main.MainActivity"/>

        <receiver android:name="com.sauravchhabra.foodme.widget.AppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_info" />
        </receiver>

        <service
            android:name="com.sauravchhabra.foodme.widget.WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />


    </application>

</manifest>